<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WNADotNetCore.ChartWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WNADotNetCore.ChartWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WNADotNetCore.ChartWebApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ApexChart" asp-action="AreaChart">Area Chart</a>
                        </li>
                        <li class="nav-item">   
                            <a class="nav-link text-dark" asp-area="" asp-controller="ApexChart" asp-action="BarChart">Bar Chart</a>
                        </li>
                        <li class="nav-item">   
                            <a class="nav-link text-dark" asp-area="" asp-controller="ApexChart" asp-action="ColumnChart">Column Chart</a>
                        </li>
                        <li class="nav-item">   
                            <a class="nav-link text-dark" asp-area="" asp-controller="ApexChart" asp-action="PieChart">Pie Chart</a>
                        </li>
                        <li class="nav-item">   
                            <a class="nav-link text-dark" asp-area="" asp-controller="Area Chart" asp-action="BubbleChart">Bubble Chart</a>
                        </li>
                        <li class="nav-item">   
                            <a class="nav-link text-dark" asp-area="" asp-controller="Area Chart" asp-action="LineChart">Line Chart</a>
                        </li>
                        <li class="nav-item">   
                            <a class="nav-link text-dark" asp-area="" asp-controller="Area Chart" asp-action="PolarChart">Polar Chart</a>
                        </li>
                        <li class="nav-item">   
                            <a class="nav-link text-dark" asp-area="" asp-controller="Area Chart" asp-action="RadarChart">Radar Chart</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WNADotNetCore.ChartWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @await RenderSectionAsync("scripts", required: false)
</body>
</html>
